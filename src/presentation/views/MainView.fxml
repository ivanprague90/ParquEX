   <children>
      <StackPane prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@image/room2.png" />
               </image>
            </ImageView>
            <BorderPane prefHeight="600.0" prefWidth="800.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <center>
                  <BorderPane fx:id="borderInner" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <top>
                        <HBox spacing="20.0">
                           <children>
                              <StackPane>
                                 <children>
                                    <Label fx:id="lblWhy" onMouseEntered="#handle" text=" ? " textFill="#ff5e00">
