                              </TextField>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Label text="Password">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </Label>
                              <PasswordField fx:id="txtPassword" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="300.0">
